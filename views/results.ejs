<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="./style/main.css">
	<link rel="stylesheet" type="text/css" href="./style/result.css">
	<title>Music Box</title>
</head>
<body>
	<h1>Results</h1>
	<form action="/playback" method="POST">
		<input type="submit" value="looks good sumbit">
		<% data.forEach(function(item){ %>
			<% if(item.snippet) { %>
				<div class="video-container" data-title="<%= item.snippet.title %>">
					<img src="<%= item.snippet.thumbnails.default.url %>"  alt ="<%= item.snippet.title %>"/>
					<% if (item.snippet.title.length > 30) { %>
						<h3><%= item.snippet.title.substring(0, 50) %>...</h3>
					<% } else { %>
						<h3><%= item.snippet.title %></h3>
					<%} %>
					<input type="hidden" name="videoId" value="<%= item.id.videoId %>" />
					<div>
						<span class="delete">Delete</span>
						<span class="change-song">Change</span>
					</div>
				</div>
			<% } else { %>
				<div class="video-container">
					<h2><%= item %></h2>
				</div>
			<% } %>
		<% }); %>
	</form>
	<script type="text/javascript" src="./script/results.js"></script>
</body>